<h1>List videos</h1>

<h5><%= link_to "Add video", new_video_path, class: "btn btn-warning btn-small" %></h5>

<center><%= will_paginate %></center>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>URL</th>
                <th></th>
            </tr>
            <% @videos.each do |video| %>
            <tr>
                <td><%= link_to video.name, edit_video_path(video) %></td>
                <td>
                    <iframe width="420" height="315" src="<%= video.url %>" frameborder="0" allowfullscreen></iframe>
                </td>
                <td>
                    <%= link_to "Show", video_path(video) %> | 
                    <%= link_to "Edit", edit_video_path(video) %> | 
                    <%= link_to "Delete" %>
                </td>
            </tr>
            <% end %>
        </table>    
        
    </div>    
</div>

<center><%= will_paginate %></center>