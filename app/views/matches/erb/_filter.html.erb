<%= form_tag("/matches", method: "get") do %>
<div class="row filter-row">
    
    <div class="col-md-12">
        <div class="col-md-3">
            <%= text_field_tag :home_team, "", placeholder: "Home team", class: "form-control" %>
        </div>
        <div class="col-md-3">
            <%= text_field_tag :away_team, "", placeholder: "Away team", class: "form-control" %>
        </div>
        <div class="col-md-3">
            <%= select_tag :league_id, options_from_collection_for_select(@leagues, 'id', 'league_name'), include_blank: "League", class: "form-control" %>    
        </div>
        
        <div class="col-md-3">
            <%= submit_tag "Search", class: "btn btn-success" %> 
        </div>
    </div>
</div>
<div class="row filter-row">
    <div class="col-md-12">
        <div class="col-md-3">
            <%= select_tag :active, options_for_select([['Active', ''], ['True', true], ['False', false]]), class: "form-control" %>    
        </div>
    </div>
</div>
<% end %>